{
  "plugins": ["react", "import"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "impliedStrict": true
    }
  },
  "env": { "es6": true, "browser": true, "node": true },
  "rules": {
    "indent": [2, "tab"]
  }
}
